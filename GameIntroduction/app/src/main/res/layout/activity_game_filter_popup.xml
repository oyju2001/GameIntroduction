<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:orientation="vertical"
    android:layout_height="340dp"
    android:background="@color/white"
    tools:context=".GameFilterPopupActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@color/mintM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:textSize="18dp"
            android:id="@+id/textView1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="게임 인원"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            tools:layout_constraintTop_creator="1" />

        <EditText
            android:id="@+id/input_num"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint="숫자만 입력"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="2"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:textSize="18dp"
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="명"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:layout_constraintTop_creator="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:textSize="18dp"
            android:id="@+id/textView2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="소요 시간"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            tools:layout_constraintTop_creator="1" />

        <EditText
            android:id="@+id/input_time"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint="숫자만 입력"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="3"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>

        <TextView
            android:textSize="18dp"
            android:textColor="@color/black"
            android:id="@+id/textView11"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="분"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:layout_constraintTop_creator="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="준비물"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            android:textSize="18dp"
            tools:layout_constraintTop_creator="1" />

        <RadioGroup
            android:textColor="@color/black"
            android:id="@+id/radio_material"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <RadioButton
                android:textSize="15dp"
                android:buttonTint="@color/mintM"
                android:id="@+id/radio_materialYes"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="유"
                android:textColor="@color/black"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <RadioButton
                android:textSize="15dp"
                android:buttonTint="@color/mintM"
                android:id="@+id/radio_materialNo"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="무"
                android:textColor="@color/black"
                tools:layout_constraintTop_creator="1" />

            <RadioButton
                android:textSize="15dp"
                android:buttonTint="@color/mintM"
                android:id="@+id/radio_materialYesNo"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="공통"
                android:textColor="@color/black"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:textSize="18dp"
            android:buttonTint="@color/mintM"
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="장소"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            tools:layout_constraintBottom_creator="1" />

        <RadioGroup
            android:textColor="@color/black"
            android:id="@+id/radio_place"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <RadioButton
                android:textSize="15dp"
                android:buttonTint="@color/mintM"
                android:id="@+id/radio_in"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="실내"
                android:textColor="@color/black"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <RadioButton
                android:textSize="15dp"
                android:buttonTint="@color/mintM"
                android:id="@+id/radio_out"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="실외"
                android:textColor="@color/black"
                tools:layout_constraintRight_creator="1" />

            <RadioButton
                android:textSize="15dp"
                android:buttonTint="@color/mintM"
                android:id="@+id/radio_inOut"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="공통"
                android:textColor="@color/black"
                tools:layout_constraintTop_creator="1" />
        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:textSize="15dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:textColor="@color/mintM"
            android:text="취소"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_back_popup"
            android:onClick="onClose"/>

        <Button
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_search"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@android:color/background_light"
            android:textColor="@color/mintM"
            android:onClick="onGo"
            android:text="검색" />

    </RelativeLayout>


</LinearLayout>